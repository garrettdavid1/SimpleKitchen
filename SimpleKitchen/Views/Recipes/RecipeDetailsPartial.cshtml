@model SimpleKitchen.Models.Recipe
<link href="~/Content/RecipeDetailsPartial.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="row">
        <div class="row">
            <h2 class="header col-xs-12">
                @Html.DisplayFor(m => m.RecipeName)
                <button type="button" class="modal-button btn btn-danger" data-dismiss="modal">X</button>
            </h2>
            <hr />
        </div>
        <div class="col-xs-12 col-sm-6 row image-wrapper">
            <div class="col-xs-1 image-side-buffer"></div>
            <div class="image-container col-xs-10" style="background-image: url(@Model.ImageReference)"></div>
            <div class="col-xs-1 image-side-buffer"></div>
        </div>
        <div class="recipe-info col-xs-12 col-sm-6">
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.Ingredients)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ingredients)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Instructions)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Instructions)
                </dd>
            </dl>
        </div>
    </div>
</div>